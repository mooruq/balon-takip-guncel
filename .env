# =============================================================================
# Balon Takip Sistemi - Çevre Değişkenleri
# =============================================================================

# Uygulama Ayarları
# -----------------
APP_NAME="Balon Takip Sistemi"
APP_VERSION="2.0.0"

# Kamera Ayarları
# ---------------
CAMERA_ID=0
CAMERA_FPS=30
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
SAVE_FORMAT=JPEG

# Kamera Gelişmiş Ayarları
# ------------------------
AUTO_EXPOSURE=True
AUTO_WHITE_BALANCE=True

# Kamera Hızlı Başlatma Optimizasyonları
# ---------------------------------------
USE_DIRECTSHOW_BACKEND=True
CAMERA_BUFFER_SIZE=1
DISABLE_AUTO_SETTINGS_ON_STARTUP=True
FORCE_FPS_SETTING=True
CAMERA_FOURCC=MJPG
REDUCE_PROCESSING_DELAY=True

# Kamera Timeout Ayarları
# -----------------------
CAMERA_INIT_TIMEOUT_SECONDS=30.0
CAMERA_OPEN_CHECK_TIMEOUT_SECONDS=10.0

# Kamera İç Parametreleri (Kalibrasyon)
# -------------------------------------
CAMERA_FX=500.0
CAMERA_FY=500.0
CAMERA_CX=320.0
CAMERA_CY=240.0
PIXEL_SIZE_X=4.8e-6
PIXEL_SIZE_Y=4.8e-6
FOCAL_LENGTH_M=0.0024

# UI Ayarları
# -----------
WINDOW_WIDTH=1400
WINDOW_HEIGHT=800

# Model Ayarları
# --------------
MODEL_DIR=models
BALLOON_MODEL=yolov8n.pt
BALLOON_MODEL_CUSTOM=bests_balloon_30_dark.pt

# ByteTracker Ayarları
# --------------------
TRACK_THRESH=0.5
TRACK_BUFFER=30
MATCH_THRESH=0.8
FRAME_RATE=30

# Performans Optimizasyon Ayarları
# --------------------------------
ENABLE_PERIODIC_CLEANUP=True
CLEANUP_INTERVAL_FRAMES=100
GPU_CACHE_CLEAR_INTERVAL=50
MAX_FRAME_HISTORY=100
MAX_TRACK_HISTORY=10
TRACK_TIMEOUT_SECONDS=0.5
FORCE_GC_INTERVAL=500

# Uyarlanabilir Performans Ayarları
# ---------------------------------
ADAPTIVE_TRACKING_SLEEP=True
MIN_TRACKING_SLEEP_MS=5.0
MAX_TRACKING_SLEEP_MS=50.0

# Bellek Yönetimi Ayarları
# ------------------------
ENABLE_AGGRESSIVE_CLEANUP=True
MAX_ERROR_HISTORY=100
MAX_TIMESTAMP_AGE_SECONDS=10.0

# Tespit Ayarları
# ---------------
CONFIDENCE_THRESHOLD=0.40

# GPU Kullanımı
# -------------
USE_GPU=True 

# LZ-100 Servo Motor Ayarları
# ---------------------------
LZ100_MODBUS_PORT=COM3
LZ100_MODBUS_BAUDRATE=9600
LZ100_MODBUS_STOPBITS=2
LZ100_MODBUS_BYTESIZE=8
LZ100_MODBUS_PARITY=N
LZ100_MODBUS_TIMEOUT=1.0

# Servo Motor Slave ID'leri
LZ100_PAN_SLAVE_ID=1
LZ100_TILT_SLAVE_ID=10

# Hız Sınırları (RPM)
LZ100_MAX_SPEED=10
LZ100_MIN_SPEED=1

# Kontrol Parametreleri
LZ100_SPEED_SCALE_FACTOR=2.0
LZ100_DEADZONE_THRESHOLD=8.0
LZ100_SPEED_SMOOTHING=0.7

# IBVS Kontrol Gains
IBVS_PAN_GAIN=0.3
IBVS_TILT_GAIN=0.3
IBVS_PAN_INTEGRAL=0.05
IBVS_TILT_INTEGRAL=0.05
IBVS_PAN_DERIVATIVE=0.1
IBVS_TILT_DERIVATIVE=0.1